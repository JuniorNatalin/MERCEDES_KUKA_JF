&ACCESS REO
&REL 6
&COMMENT DC-Halt nach Punktende V1.00
DEF  HaltPunktEnde ( )

IF $IN[I_HALTNACHPUNKT] THEN
   $OUT[O_HALTNACHPUNKTERREICHT]=TRUE ;Halt nach Punktende erreicht
   HALT
   MSG_WAIT ( HPE_MESSAGE[],  I_HALTNACHPUNKT, FALSE, MAX_I_HPE_MESSAGE, 0, BRESULT) ;Warte I_HALTNACHPUNKT FALSE
   $OUT[O_HALTNACHPUNKTERREICHT]=FALSE ;Halt nach Punktende verlassen
ENDIF
  
END
